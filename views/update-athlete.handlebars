<h1>Update {{athlete.athlete_id}}:</h1>
<form id="update-athlete" action="/updateathlete" method="post">
    First name: <input type="text" name="fname" value="{{athlete.first_name}}"><br>
    Last name: <input type="text" name="lname" value="{{athlete.last_name}}"><br>
    gender: <input type="text" name="gender" value="{{athlete.gender}}"><br>
    country: <select name="cid">
      {{#each country}}
      <option value="{{country_id}}" name="country_id">{{country.name}}</option>
      <br>
      {{/each}}
    </select> 
    <br><br>
    sport: <select name="sid">
      {{#each sport}}
      <option value="{{sport_id}}" name="sport_id">{{name}}</option>
      <br>
      {{/each}}
    </select> 
    <br><br>
    brand: <select name="bid">
      {{#each brand}}
      <option value="{{brand_id}}" name="brand_id">{{name}}</option>
      <br>
      {{/each}}
    </select> 
    <br><br>
</form>
<button onclick="updateathlete({{athlete.id}})">Update</button>
